<ul class="notices">
  <li><%= link_to "Pending Requests", pending_requests_path %> > Review Pending Request</li>
</ul><!-- .notices -->

<h2>Pending Transfer Request Details</h2>
<ul>
  <li><%= @request.requester_name %></li>
  <li><%= @request.requester_email %></li>

  <% if @request.transfer_school_other %>
    <li><%= @request.transfer_school_name %></li>
    <li><%= @request.transfer_school_location %></li>
    <li><%= @request.transfer_school_international %></li>
  <% else %>
    <li><%= @request.transfer_school.name %></li>
  <% end %>

  <% if @request.transfer_course_other %>
    <li><%= @request.transfer_course_name %></li>
    <li><%= @request.transfer_course_num %></li>
    <li><%= @request.transfer_course_url %></li>
  <% else %>
    <li><%= @request.transfer_course.full_name %></li>
  <% end %>

  <li><%= @request.ur_course.full_name %></li>
</ul>
