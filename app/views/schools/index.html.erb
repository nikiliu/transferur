<div class="notices">
  <li><%= link_to "New School", new_school_path %></li>
</div><!-- .notices -->

<ul class="schools">
<% @schools.each do |school| %>
  <li>
    <%= link_to school.name, edit_school_path(school.id) %>
    <% unless school.id == 1 %>
    <span>
      <%=
        link_to "Delete",
        school_path(school.id),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this school?" }
      %>
    </span>
    <% end %>
  </li>
<% end %>
</ul><!-- .schools -->
